!! Colorscheme
!
! https://lukas.zapletalovi.com/2013/07/hidden-gems-of-xterm.html
! Gruv-box color scheme https://github.com/morhetz/gruvbox-contrib/blob/master/xresources/gruvbox-dark.xresources
XTerm.termName: xterm-256color
XTerm.vt100.locale: true
! XTerm.vt100.utf8: true
Term*font: -*-terminus-*-*-*-18-*-*-*-*-*-iso10646-1


XTerm*faceNameDoublesize:Font Awesome
XTerm.vt100.faceName: terminus
XTerm.utf8: 2
XTerm.vt100.faceSize: 10


! special
XTerm.vt100.Background: rgb:00/00/00
XTerm.vt100.Foreground: rgb:fb/f1/c7
XTerm.vt100.cursorColor: rgb:68/9d/6a
! soft contrast: *background: #32302f
! *foreground: #fbf1c7
! Black + DarkGrey
*color0:  rgb:00/00/00
*color8:  rgb:92/83/74
! DarkRed + Red
*color1:  rgb:cc/24/1d
*color9:  rgb:fb/49/34
! DarkGreen + Green
*color2:  rgb:98/97/1a
*color10: rgb:b8/bb/26
! DarkYellow + Yellow
*color3:  rgb:d7/99/21
*color11: rgb:fa/bd/2f
! DarkBlue + Blue
*color4:  rgb:45/85/88
*color12: rgb:83/a5/98
! DarkMagenta + Magenta
*color5:  rgb:b1/62/86
*color13: rgb:d3/86/9b
! DarkCyan + Cyan
*color6:  rgb:68/9d/6a
*color14: rgb:8e/c0/7c
! LightGrey + White
*color7:  rgb:a8/99/84
*color15: rgb:fb/f1/c7

XTerm.vt100.loginShell: true

! copy & paste like the gnome shell
XTerm*vt100.translations: #override \n\
Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
Ctrl Shift <Key>I: set-reverse-video(toggle) \n\
Ctrl Shift <Key>S: secure() \n\
Ctrl <Key>minus: smaller-vt-font() \n\
Ctrl <Key>plus: larger-vt-font()

! Enable highlight to copy
XTerm*selectToClipboard: true

! make the alt key behave normally
XTerm.vt100.metaSendsEscape: true

! scrollback history
XTerm.saveLines: 10000

! silence please
XTerm.bellIsUrgent: true
XTerm*visualBell: false

